{
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"sourceMap": false,
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"allowJs": false,
		"strict": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"removeComments": true,
		"types": ["node"],
		"lib": ["ESNext", "DOM"], // vue/vetur needs this
		"skipLibCheck": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"paths": {
			"~/*": ["src/*"]
		}
	},
	// "include": ["app", "workbench"],
	"exclude": ["node_modules", "**/node_modules"]
}
