{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"baseUrl": ".",
		"types": ["vite/client"],
		"lib": ["ESNext", "DOM"],
		"paths": {
			"~/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.vue"],
	"exclude": ["node_modules", "**/node_modules"]
}
